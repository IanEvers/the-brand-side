	</div>

	<section class="mt-36">
		<div class="m-auto flex justify-center sticky top-8">
			<code class="text-xl uppercase text-center my-6">featured work</code>
		</div>

		

		{
			trabajos.map((trabajo: any, index: number) => {
				return (
					<a class="lg:flex gap-5 mt-10 mb-30 lg:py-10 md:sticky top-20 bg-[white]" href={localePath("work/" + trabajo._id)}>
