---
import Layout from '../../layouts/Layout.astro';

const { trabajo } = Astro.params;

type Trabajo = {
  imagen1_main: string,
  nombre: string,
  client: string,
  year: string,
  sides: string[],
  industry: string,
  texto1: string,
  imagen2: string,
  texto2: string,
  texto2bis: string,
  imagen3_grid: string,
  imagen4_grid: string,
  imagen5: string,
  texto3: string,
  imagen6_sidescroll: string,
  imagen7_sidescroll: string,
  imagen8_sidescroll: string,
  texto4_title: string,
  texto4: string,
  imagen9: string,
  texto5_big: string,
  imagen10: string,
  imagen11: string,
  texto6_final: string,
  texto6_datos: string
}

const imagen = "https://d2kq0urxkarztv.cloudfront.net/593641fc4ac3e7290178b1b1/4097914/upload-1127f231-9c51-4bba-921b-0769ba1e08a9.png?e=webp&nll=true&cX=0&cY=272&cW=1330&cH=859"
const texto = "The main logo features a Peruvian cockade (spanish: escarapela): a national icon deeply rooted in Peruvian popular culture that embodies the civic feeling of union and cooperation. In the context of RedPÃºblica, this element is referenced to talk about the union of ideas while generating a call to action."

const trabajoMock = {
  imagen1_main: imagen,
  nombre: "Redpublica",
  client: "UNDP Peru",
  year: "2021",
  sides: ["branding", "art direction", "illustratoin"],
  industry: "ACTIVISM AND POLITICS",
  texto1: texto,
  imagen2: imagen,
  texto2: texto,
  texto2bis: texto,
  imagen3_grid: imagen,
  imagen4_grid: imagen,
  imagen5: imagen,
  texto3_titulo: "Union and power",
  texto3: texto,
  imagen6_sidescroll: imagen,
  imagen7_sidescroll: imagen,
  imagen8_sidescroll: imagen,
  texto4_title: texto,
  texto4: texto,
  imagen9: imagen,
  texto5_big: texto,
  imagen10: imagen,
  imagen11: imagen,
  texto6_final: texto,
  texto6_datos: texto,
}

---

<Layout title="Sides - The Brand Side">

  <div class="pt-32 px-2 lg:px-6">
    
    <div class="lg:flex gap-2 font-Inter">
      <div class=" basis-2/3 pr-4 lg:border-r border-black">
        <img src={trabajoMock.imagen1_main} alt="" class="">
      </div>
      <div class=" basis-1/3 p-2 flex flex-col justify-between ">
        <div>
          <h1 class="text-3xl lg:text-5xl">{trabajoMock.nombre}</h1>
          <div class="flex gap-5 mt-4">
            <div>
              <p class="font-bold uppercase">Client</p>
              <p>{trabajoMock.client}</p>
            </div>
            <div>
              <p class="font-bold uppercase">Year</p>
              <p>{trabajoMock.year}</p>
            </div>
            <div>
              <p class="font-bold uppercase">Sides</p>
              {
                trabajoMock.sides.map((side) => {
                  return (
                    <p class="uppercase"> {side} </p>
                  )
                })
              }
            </div>
            <div>
              <p class="font-bold uppercase">Industry</p>
              <p>{trabajoMock.industry}</p>
            </div>
          </div>
        </div>

        <div class="mt-8">
          <p >{trabajoMock.texto1}</p>
        </div>
      </div>
    </div>

    <div class="my-6 px">
      <img src={trabajoMock.imagen2} alt="" class="w-full object-cover max-h-[500px]">

      <div class="lg:flex justify-center m-auto max-w-5xl my-12 font-Inter">
        <div class="p-6 lg:border-r lg:border-l border-black">
          <p class="font-bold text-xl lg:text-3xl ">{trabajoMock.texto2}</p>
        </div>
        <div>
          <p class="px-6 ">{trabajoMock.texto2bis}</p>
        </div>
      </div>

    </div>

    <div class="lg:flex gap-6 p-3 my-6 justify-center">
      <img src={trabajoMock.imagen3_grid} alt="" class="lg:w-1/2 p-2">
      <img src={trabajoMock.imagen4_grid} alt="" class="lg:w-1/2 p-2">
    </div>
    
    <div class="lg:flex mb-12 font-Inter">
      <img src={trabajoMock.imagen5} alt="" class="w-3/4">
      <div class="flex flex-col justify-end px-4">
        <h2 class="font-bold text-lg">{trabajoMock.texto3_titulo}</h2>
        <p class="text-sm">{trabajoMock.texto3}</p>
      </div>
    </div>


  </div>
</Layout>

<style>
.horizontal-scroll-wrapper {
  width: 100px;
  height: 300px;
  overflow-y: auto;
  overflow-x: hidden;
  transform: rotate(-90deg);
  transform-origin: right top;
  transform:rotate(-90deg) translateY(-100px);
}

.horizontal-scroll-wrapper > div {
  width: 100px;
  height: 100px;
  transform: rotate(90deg);
  transform-origin: right top;
}
</style>